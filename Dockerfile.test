FROM python:3.11-slim

# Install Node.js for MCP server (needed for tests)
RUN apt-get update && apt-get install -y \
    curl \
    gnupg \
    && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install MCP filesystem server
RUN npm install -g @modelcontextprotocol/server-filesystem

# Set up Python environment
WORKDIR /app
COPY requirements.txt .
# Install base requirements (rarely changes)
RUN pip install --no-cache-dir -r requirements.txt

# Install test-specific dependencies (changes more often)
RUN pip install --no-cache-dir \
    requests \
    pytest-playwright \
    playwright

# Install web test dependencies (newest additions)
RUN pip install --no-cache-dir \
    "python-fasthtml>=0.1.0" \
    "httpx>=0.25.0" \
    "websockets>=12.0" \
    "python-multipart>=0.0.6"

# Install Playwright browsers (headless Chromium) - most expensive operation
RUN playwright install --with-deps chromium

# Copy application code
COPY . .

ENV PYTHONPATH=/app

# Default command for testing
CMD ["bash", "-c", "PYTHONPATH=/app pytest -v"]
