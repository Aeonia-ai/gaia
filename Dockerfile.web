# FastHTML Web Service
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install FastHTML and web-specific dependencies
RUN pip install --no-cache-dir \
    "python-fasthtml>=0.1.0" \
    "httpx>=0.25.0" \
    "websockets>=12.0" \
    "uvicorn[standard]>=0.24.0" \
    "python-multipart>=0.0.6" \
    "asyncpg>=0.29.0"

# Copy shared modules
COPY app/shared app/shared

# Copy database models
COPY app/models app/models

# Copy web service
COPY app/services/web app/services/web

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the service
CMD ["uvicorn", "app.services.web.main:app", "--host", "0.0.0.0", "--port", "8000"]